<h1>Listing terms</h1>

<table>
  <tr>
    <th>Lexicon</th>
    <th>Term</th>
    <th>Freq</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @terms.each do |term| %>
  <tr>
    <td><%= term.lexicon %></td>
    <td><%= term.term %></td>
    <td><%= term.freq %></td>
    <td><%= link_to 'Show', term %></td>
    <td><%= link_to 'Edit', edit_term_path(term) %></td>
    <td><%= link_to 'Destroy', term, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

